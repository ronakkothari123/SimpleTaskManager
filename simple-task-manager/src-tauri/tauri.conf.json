{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "simple-task-manager",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "label": "tm",
        "title": "Simple Task Manager",
        "width": 960,
        "height": 540
      },
      {
        "title": "Pomodoro Timer",
        "label": "timer",
        "width": 384,
        "height": 128,
        "url": "pomodoro/index.html",
        "visible": false,
        "resizable": false,
        "skipTaskbar": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.ronakkothari.simpletaskmanager",
      "icon": [
        "icons/icon.png",
        "icons/icon.ico"
      ]
    }
  }
}
